{
  "version": 2,

  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },

    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
