{
  "version": 2,
  "builds": [

    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "pages/api/**" 
        ]
      }
    },

    {
      "src": "pubspec.yaml", 
      "use": "@vercel/static-build",
      "config": {

        "buildCommand": "flutter build web --release",
        "outputDirectory": "build/web"
      }
    }
  ],
  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    
    
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
