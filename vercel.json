{
  "version": 2,
  "builds": [
    
    {
      "src": "package.json",
      "use": "@vercel/node"
    },

    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "flutter build web --release",
        "outputDirectory": "build/web"
      }
    }
  ],
  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    
    
    {
      "source": "/(.*\\..*)", 
      "destination": "/$1"
    },
    
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    
    
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
