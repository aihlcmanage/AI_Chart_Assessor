{
  "version": 2,
  "builds": [

    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {

        "includeFiles": [
          "pages/api/**" 
        ]
      }
    },

    {
      "src": "build/web/**", 
      "use": "@vercel/static-build" 
    }
  ],
  "routes": [

    {
      "src": "/api/(.*)",
      "dest": "/pages/api/$1" 
    },

    {
      "src": "/(.*\\.(js|css|html|json|png|jpg|gif|svg|ico|ttf|otf|eot|woff|woff2))$",
      "dest": "/$1"
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
