{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install && git clone -b 3.16.0 https://github.com/flutter/flutter.git /tmp/flutter && /tmp/flutter/bin/flutter precache && /tmp/flutter/bin/flutter doctor",
        "buildCommand": "/tmp/flutter/bin/flutter build web --web-renderer html --base-href / && cp -R build/web/. public/ && next build"
      }
    }
  ],
  "build": {
    "env": {
      "FLUTTER_VERSION": "3.16.0", 
      "FLUTTER_WEB_ENABLE_SUBDIRECTORY_NAVIGATION": "true" 
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/flutter_bootstrap.js",
      "destination": "/public/flutter_bootstrap.js"
    },
    {
      "source": "/main.dart.js",
      "destination": "/public/main.dart.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/public/manifest.json"
    },
    {
      "source": "/favicon.png",
      "destination": "/public/favicon.png"
    },
    {
      "source": "/icons/(.*)",
      "destination": "/public/icons/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/public/assets/$1"
    },
    {
      "source": "/:path((?!api/).*)", 
      "destination": "/public/:path"
    }
  ]
}
