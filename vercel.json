{
  "version": 2,
  
  "builds": [

    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:api"
      }
    },

    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {

        "buildCommand": "flutter build web --release; cp build/web/index.html index.html; cp build/web/main.dart.js main.dart.js; cp -r build/web/assets assets"
      }
    }
  ],
  

  "routes": [
    
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },

    {
      "src": "/(.*\\.(js|css|ico|png|jpg|gif|json|svg|woff|woff2|ttf|otf|eot|map|dart))",
      "dest": "/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
