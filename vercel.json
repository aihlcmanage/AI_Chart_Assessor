{
  "version": 2,
  
  "builds": [
    
    {
      "src": "pubspec.yaml", 
      "use": "@vercel/static-build",
      "config": {
        
        "buildCommand": "flutter build web --release && cp -r build/web/assets . && cp build/web/index.html . && cp build/web/main.dart.js . && cp build/web/manifest.json ."
      }
    }
  
  ],
  
  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },

    {
      "source": "/(.*\\..*)", 
      "destination": "/$1"
    },

    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
