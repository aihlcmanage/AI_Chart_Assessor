{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    { 
      "src": "/_next/(.*)", 
      "dest": "/_next/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
