{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install && flutter pub get",
        "buildCommand": "flutter build web --web-renderer html --base-href /flutter/ && rm -rf public/flutter && mv build/web public/flutter && next build"
      }
    }
  ],
  "build": {
    "env": {
      "FLUTTER_VERSION": "3.16.0", 
      "FLUTTER_WEB_ENABLE_SUBDIRECTORY_NAVIGATION": "true" 
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}