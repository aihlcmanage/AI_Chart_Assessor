{
  "version": 2,
  
  "builds": [

    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:api"
      }
    },

    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {

        "buildCommand": "flutter build web --release; mkdir -p public; cp -r build/web/index.html public/index.html; cp -r build/web/assets public/assets; cp -r build/web/*.js public/; cp -r build/web/*.json public/"

      }
    }
  ],
  
  "rewrites": [

    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },

    {
      "source": "/(.*\\..*)", 
      "destination": "/public/$1"
    },
    
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
